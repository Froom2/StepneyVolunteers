# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET     /welcome                    controllers.WelcomeController.welcome
GET     /arrival-month              controllers.arrival.ArrivalController.arrivalMonth
POST    /arrival-month/:month       controllers.arrival.ArrivalController.selectArrivalMonth(month: String)
GET     /arrival-day/:month         controllers.arrival.ArrivalController.arrivalDay(month: String)
POST    /arrival-day/:day           controllers.arrival.ArrivalController.selectArrivalDay(day: Int)
GET     /arrival-purpose/           controllers.arrival.ArrivalController.arrivalPurpose
POST    /arrival-purpose/:purpose   controllers.arrival.ArrivalController.selectArrivalPurpose(purpose: VisitPurpose)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
